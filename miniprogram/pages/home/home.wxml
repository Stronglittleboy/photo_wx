<!-- index.wxml -->

<view>
    <van-tabs active="{{ active }}" bind:change="onChange" bind:click="labClick">
        <van-tab title="人气">人气</van-tab>
        <van-tab title="时间">时间</van-tab>
        <van-tab title="筛选"></van-tab>
    </van-tabs>
    <!--筛选侧边框-->
    <van-popup
            show="{{ show }}"
            position="right"
            custom-style="width: 50%;height:100%;"
            bind:close="onClose"
    >
        <van-row gutter="20">
            <van-col span="8">常驻馆</van-col>
        </van-row>
        <van-row gutter="20">
            <van-col span="12">
                <button bindtap="venueNameClick">{{filterCriteria.venueName}}</button>
            </van-col>
        </van-row>
    </van-popup>

    <van-popup
            show="{{ venueNameShow }}"
            position="bottom"
            custom-style="width: 100%;height:50%;"
            bind:close="onClose"
    >
        <van-picker
                show-toolbar
                title="场馆"
                columns="{{ columns }}"
                bind:cancel="onCancelVenueName"
                bind:confirm="onConfirmVenueName"
        />
    </van-popup>

    <!-- 主体内容区域 -->
    <scroll-view class="content" scroll-y="true" style="height: calc(100vh - 128rpx);">
        <view class="waterfall-container">
            <waterfall-card wx:for="{{cardList}}" wx:key="index"
                            backgroundImage="{{item.backgroundImage}}"
                            topRightText="{{item.topRightText}}"
                            centerBottomText="{{item.centerBottomText}}"
                            bottomIcon="{{item.bottomIcon}}"
                            bindtap="clickProdut"
                            data-key="{{item.id}}"
            />
        </view>
    </scroll-view>

    <!--    <bottom-navigation-bar/>-->
    <van-tabbar active="{{ activeBottomLab }}" bind:change="onChangeBottomLab">
        <van-tabbar-item icon="home-o">首页</van-tabbar-item>
        <van-tabbar-item icon="shopping-cart-o" dot>商城</van-tabbar-item>
        <van-tabbar-item icon="bag-o" info="5">订单</van-tabbar-item>
        <van-tabbar-item icon="comment-o" info="20">消息</van-tabbar-item>
        <van-tabbar-item icon="manager-o" info="20">我的</van-tabbar-item>
    </van-tabbar>
</view>
