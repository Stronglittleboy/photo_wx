/* double-layer-card.wxss */

.card {
    position: relative;
    width: 25vh;
    height: 25vh;
}

.background-image {
    width: 100%;
    height: 100%;
}

.upper-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 16rpx; /* 调整上层内容的内边距 */
    box-sizing: border-box;
}

.top-right-text {
    position: absolute;
    width: 25vw;
    height: 4vh;
    line-height: 4vh;
    text-align: center;
    border-radius: 25px 0px  0px 25px;
    right: 0;
    color: #fff; /* 调整文字颜色 */
    background-color: rgba(255, 255, 255, 0.5); /* 白色半透明背景 */
}

.bottom-content {
    text-align: center;
    position: absolute;
    width: 50%;
    margin: auto;
    bottom: 1vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: rgba(255, 255, 255, 0.5); /* 白色半透明背景 */
    top: 60%;
    left: 50%;
    transform: translate(-50%, 0%);
    border-radius: 10px;
}
.name{
    font-size: 20px;
    font-weight: bold;
}

.bottom-icon {
    width: 2vh; /* 调整图标大小 */
    height: 2vh; /* 调整图标大小 */
    margin-top: 8rpx; /* 调整图标与文字的间距 */
}
.custom-class{
    bottom: 0px;
}
